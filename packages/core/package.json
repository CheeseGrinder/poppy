{
  "name": "@poppy-ui/core",
  "version": "0.1.0-beta-0.5",
  "description": "Base component for Poppy based on Daisy-ui",
  "author": "Sukaato <sukaato.dev@proton.me>",
  "license": "MIT",
  "keywords": [
    "daisy-ui",
    "framework",
    "stencil",
    "mobile",
    "app",
    "webapp",
    "electron",
    "tauri",
    "progressive web app",
    "pwa"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.js",
  "es2015": "dist/esm/index.js",
  "es2017": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "collection:main": "dist/collection/index.js",
  "collection": "dist/collection/collection-manifest.json",
  "types": "dist/types/interface.d.ts",
  "files": [
    "components/",
    "dist/",
    "hydrate/",
    "loader/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf -rf ./.stencil ./components ./dist ./hydrate ./loader",
    "prebuild": "npm run clean",
    "build": "stencil build",
    "prestart": "npm run clean",
    "start": "stencil build --dev --watch --serve",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "audit-ci": "audit-ci --config ./audit-ci.json",
    "prettier": "prettier \"./src/**/*.{html,ts,tsx,scss}\" --write",
    "prettier:check": "prettier \"./src/**/*.{html,ts,tsx,scss}\" --check",
    "eslint": "eslint src",
    "release": "release-it"
  },
  "dependencies": {
    "@stencil/core": "^4.18.3"
  },
  "devDependencies": {
    "@cheese-grinder/stencil-component-config": "^0.2.1-beta.2",
    "@cheese-grinder/stencil-custom-readme": "^0.1.1",
    "@stencil-community/postcss": "^2.2.0",
    "@stencil/sass": "^3.0.12",
    "@stencil/vue-output-target": "^0.8.8",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "audit-ci": "^7.0.1",
    "daisyui": "^4.12.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.38",
    "prettier": "^3.3.1",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.4"
  }
}
