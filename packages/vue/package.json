{
  "name": "@poppy/vue",
  "version": "0.1.0-beta.1",
  "description": "Vue specific wrapper for @poppy-ui/core",
  "author": "Sukaato <sukaato.dev@proton.me>",
  "homepage": "https://github.com/CheeseGrinder/poppy-ui#readme",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist/",
    "css/"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheese-gronder/poppy-ui.git"
  },
  "keywords": [
    "daisy-ui",
    "framework",
    "vue",
    "stencil",
    "mobile",
    "app",
    "webapp",
    "electron",
    "tauri",
    "progressive web app",
    "pwa"
  ],
  "bugs": {
    "url": "https://github.com/CheeseGrinder/poppy-ui/issues"
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "npm run type-check",
    "preview": "vite preview",
    "build": "vite build",
    "type-check": "vue-tsc --build --force",
    "audit-ci": "audit-ci --config ./audit-ci.json",
    "prettier": "prettier --write src/",
    "prettier:check": "prettier --check src/",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "release": "release-it"
  },
  "dependencies": {
    "@poppy/core": "0.1.0-beta.2"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "audit-ci": "^7.0.1",
    "eslint": "^9.4.0",
    "eslint-plugin-vue": "^9.26.0",
    "npm-run-all2": "^6.2.0",
    "prettier": "^3.3.2",
    "rollup": "^4.18.0",
    "typescript": "~5.4.5",
    "vue": "^3.4.27"
  },
  "vetur": {
    "tags": "dist/vetur/tags.json",
    "attributes": "dist/vetur/attributes.json"
  },
  "web-types": "dist/web-types.json",
  "sideEffects": [
    "css/*.css"
  ]
}
