{
  "$schema": "node_modules/release-it/schema/release-it.json",
  "plugins": {
    "@release-it/bumper": {
      "out": {
        "file": "package.json"
      }
    }
  },
  "git": {
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "comments": {
      "submit": true
    }
  },
  "npm": {
    "publishArgs": [
      "--access public"
    ]
  }
}
